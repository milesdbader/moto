<div class="page-new-vote">
  <div class="container">
    <!-- <div class="row justify-content-center">
      <h3><div> <%#= image_tag("moto_logo.png", size: "140x80") %> </div></h3>
    </div> -->

    <div class="row justify-content-center">
      <div class="col d-flex justify-content-center">
        <img src="https://image.flaticon.com/icons/svg/1152/1152919.svg" alt="image" class="light-bulb-icon">
      </div>
    </div>

    <div class="row">
      <div class="col d-flex justify-content-center mt-3">
        <h1><strong><%= @challenge.mode.capitalize %> Mode</strong></h1>
      </div>
    </div>

    <div class="row">
      <div class="col d-flex justify-content-center m-3">
        <h3>Your Challenge:</h3>
      </div>
    </div>

    <div><!-- ingredients -->
      <div class="row ingredient-row">
        <div class="col-2 ingredient-icon">
          <i class="fas fa-wine-bottle"></i>
        </div>
        <div class="col-8 ingredient-name">
          Salsa
        </div>
        <div class="col-2 ingredient-space-filler"></div>
      </div><!-- /ingredient-row -->
      <div class="row ingredient-underline-row"></div>

      <div class="row ingredient-row">
        <div class="col-2 ingredient-icon">
          <i class="fas fa-fish"></i>
        </div>
        <div class="col-8 ingredient-name">
          Herring
        </div>
        <div class="col-2 ingredient-space-filler"></div>
      </div><!-- /ingredient-row -->
      <div class="row ingredient-underline-row"></div>

      <div class="row ingredient-row">
        <div class="col-2 ingredient-icon">
          <i class="fas fa-carrot"></i>
        </div>
        <div class="col-8 ingredient-name">
          Mushrooms
        </div>
        <div class="col-2 ingredient-space-filler"></div>
      </div>
      <div class="row ingredient-underline-row"></div>

      <div class="row ingredient-row">
        <div class="col-2 ingredient-icon">
          <i class="fas fa-wine-bottle"></i>      </div>
          <div class="col-8 ingredient-name">
            Blue cheese
          </div>
          <div class="col-2 ingredient-space-filler">

          </div>
        </div>
        <div class="row ingredient-underline-row"></div>
      </div>

    </div>


    <div class="creative-vote-footer mb-3">
      <div> <%= cl_image_tag @challenge.challenger.user.photo.key, class: 'voting-avatar mt-1', height: 100, width: 100, crop: :fill %> </div>
      <div> <%= image_tag("chef_hat.png", class: 'mt-3', size: "70x70") %> </div>
      <!-- <div> <%#= @challenge.challenger.user.photo.key %> </div> -->
      <div> <%= cl_image_tag @challenge.opponent.user.photo.key, class: 'voting-avatar mt-1', height: 100, width: 100, crop: :fill %> </div>
    </div>
  </div>
