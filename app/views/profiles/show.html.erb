        </div>

        <div class="mx-3">
         <%= image_tag("beautiful.jpg", alt:"avatar2", class: 'avatar') %>
          <h3>46%</h3>
        </div>
      </div>

      <div style="height: 250px; width: 300px; margin: auto; position: relative">
        <%= image_tag("lightbulb.png", class: "lightbulb") %>
        <div class='profile-food top-img' style="background-image: url('https://www.oetker.co.uk/Recipe/Recipes/oetker.co.uk/uk-en/baking/image-thumb__3688__RecipeDetailsLightBox/chocolate-victoria-sponge-cake.jpg')"></div>
        <div class='profile-food back-img' style="background-image: url('https://www.landolakes.com/RecipeManagementSystem/media/Recipe-Media-Files/Recipes/Retail/x17/20277-strawberry-ombre-cake-600X600.jpg')"></div>
      </div>
</div>


<script>


  const userAvatars = document.querySelectorAll(".avatar");
  userAvatars.forEach((avatar) => {
    avatar.addEventListener('click', (event) => {

      avatar.classList.toggle("prof-active");

      top = document.querySelectorAll("back-img");
      top.classList.add("top-img");

      console.log(event.currentTarget);
    });
  });

</script>
