<div class="profile-page-full">
    <div class="chev">
    <%= link_to challenges_path do %>
      <i class="fas fa-chevron-left" id="profile-chevron"></i>
    <% end %>
    </div>
  <header>
    <div class="profile">
      <%= cl_image_tag current_user.photo.key %>
      <h1><%= current_user.username %></h1>
    </div>

    <div class="profile-bio">
      <p>✈ 🌍 🍕 💃 💍 👩‍👦‍👦<br>
      Nervous about cooking.<br>
      Excited about food.</p>
    </div>

    <div class="profile-stats">
      <ul>
        <li><span class="profile-stat-count">43</span> challenges</li>
        <li><span class="profile-stat-count">21</span> won</li>
        <li><span class="profile-stat-count">22</span> lost</li>
      </ul>
    </div>
  </header>

      <div class="nav nav-tabs profile-show-tabs" role="tablist">
        <a class="nav-item nav-link active" id="nav-player-1-tab" data-toggle="tab"
           href="#nav-player-1" role="tab"
           aria-controls="nav-player-1"><strong>
         All</strong>
       </a>
        <a class="nav-item nav-link" id="nav-player-2-tab" data-toggle="tab"
           href="#nav-player-2" role="tab"
           aria-controls="nav-player-2"><strong>
         Won</strong>
       </a>
      </div>



      <div class="profile-competitors">
        <div class="mx-3">
          <%= cl_image_tag current_user.photo.key, alt:"avatar1", class:'avatar' %>
          <h3>54%</h3>
        </div>

        <div class="mx-3">
          <%= image_tag("beautiful.jpg", alt:"avatar2", class: 'avatar') %>
          <h3>46%</h3>
        </div>
      </div>

      <div style="height: 250px; width: 300px; margin: auto; position: relative">
        <%= image_tag("lightbulb.png", class: "lightbulb") %>
        <div class='profile-food top-img' style="background-image: url('https://www.oetker.co.uk/Recipe/Recipes/oetker.co.uk/uk-en/baking/image-thumb__3688__RecipeDetailsLightBox/chocolate-victoria-sponge-cake.jpg')"></div>
        <div class='profile-food back-img' style="background-image: url('https://www.landolakes.com/RecipeManagementSystem/media/Recipe-Media-Files/Recipes/Retail/x17/20277-strawberry-ombre-cake-600X600.jpg')"></div>
      </div>

      <div class="profile-competitors">
        <div class="mx-3">
          <%= cl_image_tag current_user.photo.key, alt:"avatar1", class:'avatar user1', id: 'user1' %>
